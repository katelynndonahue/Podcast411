<div class="form-wrapper">
  <div class="container">
    <form class="form" id="login">
    <h1 class="form_title">Login</h1>
    <div class="form_input-group">
      <input type="text" class="form_input" placeholder="Username or email" id="email-field" />
    </div>
    <div class="form_input-group">
      <input type="text" class="form_input" placeholder="Password" id="password-field" />
      <div class="form_input-error-message"></div>
    </div>
    <button
      class="waves-effect waves-light btn indigo accent-2"
      type="submit"
    >Login</button>
</form>
  </div>
</div>
<div class="form-wrapper">
  <div class="container container-create">
    <form class="form" id="createAccount">
      <h1 class="form_title">Create Account</h1>
      <div class="form_input-group">
        <input
          type="text"
          class="form_input"
          placeholder="Username"
          id="username-signup"
        />
      </div>
      <div class="form_input-group">
        <input
          type="text"
          class="form_input"
          placeholder="Email"
          id="email-signup"
        />
      </div>
      <div class="form_input-group">
        <input
          type="text"
          class="form_input"
          placeholder="Password"
          id="password-signup"
        />
        <div class="form_input-error-message"></div>
      </div>
      <button
        class="waves-effect waves-light btn indigo accent-2"
        type="submit"
      >Create Account</button>
    </form>
  </div>
</div>

